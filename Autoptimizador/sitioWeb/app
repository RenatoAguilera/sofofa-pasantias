from flask import Flask, render_template, request
import os


app = Flask(__name__)
IMG_FOLDER = os.path.join('static', 'IMG')

app.config['UPLOAD_FOLDER'] = IMG_FOLDER

@app.route("/")
def Display_IMG():
    Mapa_prueva = os.path.join(app.config['UPLOAD_FOLDER'], 'mapa.png')
    return render_template("index.html", user_image=Mapa_prueva)

@app.route("/")
def home():   
    return render_template("index.html")

@app.route("/")
def style():   
    return render_template("style.css")



@app.route("/")
def Optimizador():
    return render_template("OptimizadorPruevas.py")


    
@app.route("/predecir", methods=['POST'])
def predecir():
    marca = str(request.form['marca'])
    gasolina = int(request.form['gasolina'])
    ubicacion = str(request.form['ubicacion'])
    destino = str(request.form['destino'])
    siNo = str(request.form['siNo'])

    return render_template('index.html', prediccion_texto=f'vehiculo marca {marca}')
    
if __name__ == "__main__":
    app.run()